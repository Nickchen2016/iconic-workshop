		var error_email = false;
		var error_msg = false;
		$("#contact-email").focusout(function(){
			check_email()
		})
		$("#contact-msg").focusout(function(){
			check_msg()
		})

		$("#emailButton").click(function(){
			const email = $("#contact-email").val(),
                  message = $("#contact-msg").val();

			error_email = false;
			error_msg = false;
			check_email();
			check_msg();
			if(!error_email&&!error_msg){
				$("#contact-form").trigger("submit")
			}
			
		})
		function check_email(){
			if(!$("#contact-email").val().includes("@")||$("#contact-email").val().length===0){
				$("#error1").show();
				error_email = true;
			}else{
				$("#error1").hide();
				error_email = false;
			}
		}
		function check_msg(){
			if($("#contact-msg").val().length===0){
				$("#error2").show();
				error_msg = true;
			}else{
				$("#error2").hide();
				error_msg = false;
			}
		}
		
